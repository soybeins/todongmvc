<%- include('./partials/head.ejs') %>

    <body>
       <section> 
        <center> <img src="assets/images/dong.png" style="margin-top: 3rem;width:15vw;float: inherit;"> </center>
            <form action="/account/login_account" method="POST">
            <div class="container">
              <div class="row justify-content-center">
    
                <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                  <div class="row">
                    <div class="col text-center">
                      <h1>Log-in to<strong> To Do </strong></h1>
                      <p class="text-h3">Welcome to the family my friends! </p>
                      <%  if( typeof(status)!= 'undefined'  ){ %>
                        <h5 style="color:green"> <%= status%> </h5>
                      <% }%>
                      <%  if( typeof(err)!= 'undefined'  ){ %>
                        <h5 style="color:red"> <%= err%> </h5>
                      <% }%>
                    </div>
                  </div>
                  <div class="row align-items-center">
             
                  </div>
                  <div class="row align-items-center mt-4">
                    <div class="col">
                      <input type="username" name="username" class="form-control" placeholder="Username" required>
                    </div>
                  </div>
                  <div class="row align-items-center mt-4">
                    <div class="col">
                      <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                  </div>
                  <div class="row justify-content-start mt-4">
                    <div class="col">
                   
                      <button class="btn btn-primary mt-4">Login</button>
                    </div>
                    Not yet registered?&nbsp;
                    <a href="account/register_account">Click Here</a>
                  </div>
                </div>
    
              </div>
            </div>
        </form>
      </section>

    </body>
</html>